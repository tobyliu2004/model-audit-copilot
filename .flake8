[flake8]
max-line-length = 100
extend-ignore = E203, W503, E501
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .eggs,
    .tox,
    .mypy_cache,
    .pytest_cache,
    data,
    notebooks,
    *.ipynb
per-file-ignores =
    __init__.py: F401
    tests/*: F401, F811